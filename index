<body>
    <div class="container">
        <header>
            <h1>ðŸš€ Crypto Arbitrage Tracker</h1>
            <p class="subtitle">Real-time arbitrage opportunities across major exchanges</p>
        </header>

        <div class="controls">
            <div class="control-group">
                <label for="minProfit">Min Profit %:</label>
                <input type="number" id="minProfit" value="0.5" step="0.1" min="0">
            </div>
            <div class="control-group">
                <label for="refreshInterval">Refresh (sec):</label>
                <input type="number" id="refreshInterval" value="30" min="10" max="300">
            </div>
            <button id="refreshBtn">Refresh Now</button>
            <button id="autoRefreshBtn">Auto-Refresh: OFF</button>
        </div>

        <div class="status">
            <span class="status-item">
                <span class="status-label">Last Update:</span>
                <span id="lastUpdate">Never</span>
            </span>
            <span class="status-item">
                <span class="status-label">Opportunities Found:</span>
                <span id="oppCount">0</span>
            </span>
            <span class="status-item">
                <span class="status-label">Status:</span>
                <span id="statusText">Ready</span>
            </span>
        </div>

        <div id="error" class="error" style="display: none;"></div>

        <div class="opportunities" id="opportunities">
            <div class="loading">Click "Refresh Now" to start tracking arbitrage opportunities</div>
        </div>
    </div>

    <script>
        const EXCHANGES = {
            binance: 'https://api.binance.com/api/v3/ticker/price',
            coinbase: 'https://api.exchange.coinbase.com/products',
            kraken: 'https://api.kraken.com/0/public/Ticker'
        };

        const PAIRS = ['BTC/USD', 'ETH/USD', 'BTC/USDT', 'ETH/USDT', 'SOL/USD', 'XRP/USD'];

        let autoRefreshInterval = null;
        let isAutoRefresh = false;

        async function fetchBinancePrices() {
            const response = await fetch(EXCHANGES.binance);
            const data = await response.json();
            const prices = {};
            
            data.forEach(item => {
                const symbol = item.symbol;
                if (symbol.endsWith('USDT')) {
                    const base = symbol.slice(0, -4);
                    prices[`${base}/USDT`] = parseFloat(item.price);
                }
            });
            
            return { exchange: 'Binance', prices };
        }

        async function fetchCoinbasePrices() {
            const response = await fetch(EXCHANGES.coinbase);
            const data = await response.json();
            const prices = {};
            
            data.forEach(product => {
                if (product.quote_currency === 'USD' || product.quote_currency === 'USDT') {
                    const pair = `${product.base_currency}/${product.quote_currency}`;
                    if (product.price) {
                        prices[pair] = parseFloat(product.price);
                    }
                }
            });
            
            return { exchange: 'Coinbase', prices };
        }

        async function fetchKrakenPrices() {
            const response = await fetch(EXCHANGES.kraken + '?pair=BTCUSD,ETHUSD,XRPUSD,SOLUSD');
            const data = await response.json();
            const prices = {};
            
            const pairMap = {
                'XXBTZUSD': 'BTC/USD',
                'XETHZUSD': 'ETH/USD',
                'XXRPZUSD': 'XRP/USD',
                'SOLUSD': 'SOL/USD'
            };
            
            for (const [key, value] of Object.entries(data.result || {})) {
                const pair = pairMap[key];
                if (pair && value.c) {
                    prices[pair] = parseFloat(value.c[0]);
                }
            }
            
            return { exchange: 'Kraken', prices };
        }

        async function fetchAllPrices() {
            try {
                const results = await Promise.allSettled([
                    fetchBinancePrices(),
                    fetchCoinbasePrices(),
                    fetchKrakenPrices()
                ]);

                return results
                    .filter(r => r.status === 'fulfilled')
                    .map(r => r.value);
            } catch (error) {
                console.error('Error fetching prices:', error);
                return [];
            }
        }

        function findArbitrageOpportunities(exchangeData, minProfit) {
            const opportunities = [];
            const pairPrices = {};

            exchangeData.forEach(({ exchange, prices }) => {
                Object.entries(prices).forEach(([pair, price]) => {
                    if (!pairPrices[pair]) pairPrices[pair] = [];
                    pairPrices[pair].push({ exchange, price });
                });
            });

            Object.entries(pairPrices).forEach(([pair, exchanges]) => {
                if (exchanges.length < 2) return;

                exchanges.sort((a, b) => a.price - b.price);
                const lowest = exchanges[0];
                const highest = exchanges[exchanges.length - 1];

                const profitPercent = ((highest.price - lowest.price) / lowest.price) * 100;

                if (profitPercent >= minProfit) {
                    opportunities.push({
                        pair,
                        buyExchange: lowest.exchange,
                        buyPrice: lowest.price,
                        sellExchange: highest.exchange,
                        sellPrice: highest.price,
                        profitPercent: profitPercent.toFixed(2)
                    });
                }
            });

            return opportunities.sort((a, b) => parseFloat(b.profitPercent) - parseFloat(a.profitPercent));
        }

        function displayOpportunities(opportunities) {
            const container = document.getElementById('opportunities');
            document.getElementById('oppCount').textContent = opportunities.length;

            if (opportunities.length === 0) {
                container.innerHTML = '<div class="no-opportunities">No arbitrage opportunities found above the minimum profit threshold.</div>';
                return;
            }

            container.innerHTML = opportunities.map(opp => `
                <div class="opportunity-card">
                    <div class="opportunity-header">
                        <div class="crypto-pair">${opp.pair}</div>
                        <div class="profit-badge profit-positive">+${opp.profitPercent}%</div>
                    </div>
                    <div class="exchange-details">
                        <div class="exchange-box">
                            <div class="exchange-name">${opp.buyExchange}</div>
                            <div class="exchange-price">$${opp.buyPrice.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2})}</div>
                            <div class="exchange-label">BUY HERE</div>
                        </div>
                        <div class="exchange-box">
                            <div class="exchange-name">${opp.sellExchange}</div>
                            <div class="exchange-price">$${opp.sellPrice.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2})}</div>
                            <div class="exchange-label">SELL HERE</div>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function showError(message) {
            const errorDiv = document.getElementById('error');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
            setTimeout(() => errorDiv.style.display = 'none', 5000);
        }

        async function refresh() {
            const refreshBtn = document.getElementById('refreshBtn');
            const statusText = document.getElementById('statusText');
            const minProfit = parseFloat(document.getElementById('minProfit').value) || 0.5;

            refreshBtn.disabled = true;
            statusText.textContent = 'Fetching prices...';
            statusText.classList.add('updating');

            try {
                const exchangeData = await fetchAllPrices();
                
                if (exchangeData.length === 0) {
                    throw new Error('Failed to fetch data from any exchange');
                }

                const opportunities = findArbitrageOpportunities(exchangeData, minProfit);
                displayOpportunities(opportunities);

                document.getElementById('lastUpdate').textContent = new Date().toLocaleTimeString();
                statusText.textContent = 'Active';
            } catch (error) {
                console.error('Refresh error:', error);
                showError('Error fetching prices. Please try again.');
                statusText.textContent = 'Error';
            } finally {
                refreshBtn.disabled = false;
                statusText.classList.remove('updating');
            }
        }

        function toggleAutoRefresh() {
            const btn = document.getElementById('autoRefreshBtn');
            const interval = parseInt(document.getElementById('refreshInterval').value) * 1000;

            if (isAutoRefresh) {
                clearInterval(autoRefreshInterval);
                autoRefreshInterval = null;
                isAutoRefresh = false;
                btn.textContent = 'Auto-Refresh: OFF';
                btn.style.background = '#667eea';
            } else {
                refresh();
                autoRefreshInterval = setInterval(refresh, interval);
                isAutoRefresh = true;
                btn.textContent = 'Auto-Refresh: ON';
                btn.style.background = '#28a745';
            }
        }

        document.getElementById('refreshBtn').addEventListener('click', refresh);
        document.getElementById('autoRefreshBtn').addEventListener('click', toggleAutoRefresh);
    </script>
</body>
</html>
